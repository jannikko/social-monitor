FROM library/postgres

COPY ./create_user.sh   /docker-entrypoint-initdb.d/10-create_user.sh
COPY ./create_db.sh     /docker-entrypoint-initdb.d/20-create_db.sh

ARG AI_DB_NAME
ARG AI_DB_USER
ARG AI_DB_PASSWORD
ARG FETCHER_DB_NAME
ARG FETCHER_DB_USER
ARG FETCHER_DB_PASSWORD

ENV AI_DB_NAME ${AI_DB_NAME}
ENV AI_DB_USER ${AI_DB_USER}
ENV AI_DB_PASSWORD ${AI_DB_PASSWORD}
ENV FETCHER_DB_NAME ${FETCHER_DB_NAME}
ENV FETCHER_DB_USER ${FETCHER_DB_USER}
ENV FETCHER_DB_PASSWORD ${FETCHER_DB_PASSWORD}
